import groovy.json.JsonSlurperClassic

def jsonParse(def json){
    new groovy.json.json.JsonSlurperClassic().parseText(json)
}
pipeline{
    agent{label 'master'}
    enviroment{
        appName = "variable"
    }
    stages{
        state("Paso 1"){
            steps{
                script{
                    sh "echo hello world"
                }
            }
        }
    }
    post{
        always{
            deleteDir()
            sh "echo 'fase always'"
        }
        success{
            sh "echo 'fase success'"
        }
        failure{ 
            sh "echo 'fase failure"
        }
    }
}